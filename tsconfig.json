{
    "compilerOptions": {
      "target": "ES6",
      "module": "CommonJS",
      "moduleResolution": "node",
      "outDir": "dist",
      "resolveJsonModule": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "noImplicitAny": true,
      "allowUnreachableCode": false,
      "alwaysStrict": true,
      "strict": true
   },
   "include": ["src/**/*.ts", "./index.ts"],
   "exclude": ["node_modules", "**/*.spec.ts"],
    "ts-node": {
      "esm": true
    },
  }